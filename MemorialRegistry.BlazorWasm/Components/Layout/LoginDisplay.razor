@inject AuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView>
    <Authorized>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" href="/account">
                    <i class="fas fa-user-circle me-1"></i>Hello @context.User.Identity?.Name!
                </a>
            </li>
            <li class="nav-item">
                <button class="nav-link btn btn-link text-white border-0 p-0" @onclick="LogoutAsync">
                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                </button>
            </li>
        </ul>
    </Authorized>
    <NotAuthorized>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white fw-semibold" href="/register">
                    <i class="fas fa-user-plus me-1"></i>Register
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-semibold" href="/login">
                    <i class="fas fa-sign-in-alt me-1"></i>Login
                </a>
            </li>
        </ul>
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        
        if (AuthenticationStateProvider is CustomAuthenticationStateProvider customProvider)
        {
            await customProvider.NotifyAuthenticationStateChangedAsync();
        }
        
        Navigation.NavigateTo("/", forceLoad: true);
    }
}