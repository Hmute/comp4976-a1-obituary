@inherits LayoutComponentBase

<div class="page">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">
                    <i class="fas fa-dove me-2"></i>Memorial Registry
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/">
                                <i class="fas fa-list me-1"></i>Obituaries
                            </a>
                        </li>
                    </ul>
                    <LoginDisplay />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @Body
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    <span>&copy; 2025 - Memorial Registry</span>
                </div>
                <div class="col-md-6 text-end">
                    <small>Created by: Heraldo Abreu, Vanessa La, Evan Vink</small>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    :root {
        --primary-color: #0d6efd;
        --secondary-color: #6c757d;
        --success-color: #198754;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
        --info-color: #0dcaf0;
    }
    
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        background-color: #f8f9fa;
    }
    
    .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    
    .navbar-brand {
        font-size: 1.5rem;
        letter-spacing: 0.5px;
    }
    
    .navbar-nav .nav-link {
        transition: all 0.3s ease;
        border-radius: 6px;
        margin: 0 4px;
        padding: 0.5rem 1rem !important;
    }
    
    .navbar-nav .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-1px);
    }
    
    .navbar-nav .nav-link.fw-semibold {
        font-weight: 600;
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .navbar-nav .nav-link.fw-semibold:hover {
        background-color: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
    }
    
    .bg-primary {
        background: linear-gradient(45deg, var(--primary-color), #6610f2) !important;
    }
    
    .container {
        max-width: 1200px;
    }
    
    .footer {
        margin-top: auto;
    }
    
    main {
        flex: 1;
        padding-top: 2rem;
    }
</style>