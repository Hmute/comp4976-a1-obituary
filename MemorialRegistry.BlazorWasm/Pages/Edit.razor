@page "/edit/{Id:int}"
@attribute [Authorize]
@inject ObituaryApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@pageTitle - Memorial Registry</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Loading obituary...</p>
    </div>
}
else if (obituaryModel == null)
{
    <div class="text-center py-5">
        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
        <h4 class="text-muted">Obituary Not Found</h4>
        <p class="text-muted">The requested obituary could not be found.</p>
        <a href="/" class="btn btn-primary">
            <i class="fas fa-arrow-left me-1"></i>Back to Obituaries
        </a>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="display-5 text-primary">
                        <i class="fas fa-edit me-2"></i>Edit Memorial
                    </h1>
                    <div class="btn-group" role="group">
                        <a href="/details/@Id" class="btn btn-outline-info">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

                <div class="card shadow-lg border-0">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-edit me-2"></i>Editing: @obituaryModel.FullName
                        </h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="@obituaryModel" OnValidSubmit="@HandleUpdateAsync">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger mb-3" />

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    @errorMessage
                                </div>
                            }

                            <div class="row">
                                <!-- Personal Information -->
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-3">
                                        <i class="fas fa-user me-1"></i>Personal Information
                                    </h6>

                                    <div class="form-floating mb-3">
                                        <InputText @bind-Value="obituaryModel.FullName" class="form-control"
                                            placeholder="Full Name" />
                                        <label>
                                            <i class="fas fa-user me-1"></i>Full Name
                                        </label>
                                        <ValidationMessage For="@(() => obituaryModel.FullName)" class="text-danger" />
                                    </div>

                                    <div class="form-floating mb-3">
                                        <InputDate @bind-Value="birthDate" class="form-control" />
                                        <label>
                                            <i class="fas fa-birthday-cake me-1"></i>Date of Birth
                                        </label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <InputDate @bind-Value="deathDate" class="form-control" />
                                        <label>
                                            <i class="fas fa-cross me-1"></i>Date of Death
                                        </label>
                                    </div>
                                </div>

                                <!-- Photo Upload -->
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-3">
                                        <i class="fas fa-image me-1"></i>Memorial Photo
                                    </h6>

                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            @if (!string.IsNullOrEmpty(obituaryModel.PrimaryPhotoBase64))
                                            {
                                                <img src="@obituaryModel.PrimaryPhotoBase64" alt="Preview"
                                                    class="img-fluid rounded mb-3" style="max-height: 200px;" />
                                                <br />
                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                    @onclick="RemovePhoto">
                                                    <i class="fas fa-trash"></i> Remove Photo
                                                </button>
                                            }
                                            else
                                            {
                                                <i class="fas fa-image fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No photo uploaded</p>
                                            }

                                            <div class="mt-3">
                                                <InputFile OnChange="@HandleFileSelected" class="form-control"
                                                    accept="image/*" />
                                                <small class="text-muted">Supported formats: JPG, PNG, GIF (Max:
                                                    2MB)</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Biography -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 class="text-muted mb-0">
                                            <i class="fas fa-book-open me-1"></i>Biography / Tribute
                                        </h6>
                                        <button type="button" class="btn btn-sm btn-outline-primary"
                                            @onclick="GenerateBiographyAsync" disabled="@isGenerating">
                                            @if (isGenerating)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                                <span>Generating...</span>
                                            }
                                            else
                                            {
                                                <i class="fas fa-magic me-1"></i>
                                                <span>Generate Full Biography</span>
                                            }
                                        </button>
                                    </div>

                                    <small class="text-muted">Share memories, achievements, and what made this person
                                    special. Or enter key points and click "Generate Full Biography".</small>

                                    <div class="form-floating">
                                        <InputTextArea @bind-Value="obituaryModel.Biography" class="form-control"
                                            style="height: 200px;"
                                            placeholder="Share memories, achievements, and what made this person special..." />
                                        <label>Biography / Tribute Text</label>
                                        <ValidationMessage For="@(() => obituaryModel.Biography)" class="text-danger" />
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="/details/@Id" class="btn btn-outline-secondary btn-lg">
                                            <i class="fas fa-times"></i> Cancel
                                        </a>
                                        <button type="submit" class="btn btn-warning btn-lg" disabled="@isSaving">
                                            @if (isSaving)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                            }
                                            <i class="fas fa-save me-1"></i>Update Memorial
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Obituary? obituaryModel;
    private DateTime birthDate;
    private DateTime deathDate;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isGenerating = false;
    private string errorMessage = "";
    private string pageTitle = "Loading...";

    protected override async Task OnInitializedAsync()
    {
        await LoadObituaryAsync();
    }

    private async Task GenerateBiographyAsync()
    {
        if (obituaryModel == null) return;

        // Validate required fields
        if (string.IsNullOrWhiteSpace(obituaryModel.FullName))
        {
            errorMessage = "Please enter the full name before generating biography.";
            return;
        }

        if (string.IsNullOrWhiteSpace(obituaryModel.Biography))
        {
            errorMessage = "Please enter some key points in the biography field before generating.";
            return;
        }

        isGenerating = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            var request = new GenerateBiographyRequest
            {
                FullName = obituaryModel.FullName,
                DateOfBirth = DateOnly.FromDateTime(birthDate),
                DateOfDeath = DateOnly.FromDateTime(deathDate),
                Biography = obituaryModel.Biography
            };

            var response = await ApiService.GenerateBiographyAsync(request);

            if (response.Success)
            {
                obituaryModel.Biography = response.GeneratedBiography;
            }
            else
            {
                errorMessage = response.ErrorMessage ?? "Failed to generate biography. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while generating biography. Please try again.";
            Console.WriteLine($"Generate biography error: {ex.Message}");
        }
        finally
        {
            isGenerating = false;
            StateHasChanged();
        }
    }

    private async Task LoadObituaryAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            obituaryModel = await ApiService.GetObituaryAsync(Id);

            if (obituaryModel != null)
            {
                birthDate = obituaryModel.DateOfBirth.ToDateTime(TimeOnly.MinValue);
                deathDate = obituaryModel.DateOfDeath.ToDateTime(TimeOnly.MinValue);
                pageTitle = $"Edit {obituaryModel.FullName}";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading obituary: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleUpdateAsync()
    {
        if (obituaryModel == null) return;

        isSaving = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            // Convert DateTime to DateOnly
            obituaryModel.DateOfBirth = DateOnly.FromDateTime(birthDate);
            obituaryModel.DateOfDeath = DateOnly.FromDateTime(deathDate);

            await ApiService.UpdateObituaryAsync(Id, obituaryModel);
            Navigation.NavigateTo($"/details/{Id}");
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to update obituary. Please try again.";
            Console.WriteLine($"Update error: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null || obituaryModel == null) return;

        // Validate file size (2MB limit)
        const long maxFileSize = 2 * 1024 * 1024;
        if (file.Size > maxFileSize)
        {
            errorMessage = "File size must be less than 2MB.";
            return;
        }

        // Validate file type
        if (!file.ContentType.StartsWith("image/"))
        {
            errorMessage = "Please select an image file.";
            return;
        }

        try
        {
            using var stream = file.OpenReadStream(maxFileSize);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);

            var base64 = Convert.ToBase64String(memoryStream.ToArray());
            obituaryModel.PrimaryPhotoBase64 = $"data:{file.ContentType};base64,{base64}";

            errorMessage = ""; // Clear any previous errors
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to process image. Please try again.";
            Console.WriteLine($"File processing error: {ex.Message}");
        }
    }

    private void RemovePhoto()
    {
        if (obituaryModel != null)
        {
            obituaryModel.PrimaryPhotoBase64 = null;
            StateHasChanged();
        }
    }
}