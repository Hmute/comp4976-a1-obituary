@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<!-- STYLING ENHANCEMENT: Modern card-based design to match Memorial Registry theme -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <div class="text-center">
                        <!-- BRANDING: Added Memorial Registry branding with icon -->
                        <i class="fas fa-heart text-danger mb-2" style="font-size: 2rem;"></i>
                        <h3 class="font-weight-light">Memorial Registry</h3>
                        <p class="text-muted">Sign in to your account</p>
                    </div>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <!-- ENHANCED FORM: Improved styling and icons for better visibility -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                                   aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>Email Address
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                   aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-1"></i>Password
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Remember me on this device
                            </label>
                        </div>
                        
                        <!-- ENHANCED BUTTON: Modern styling with gradient -->
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-1"></i>Sign In
                            </button>
                        </div>
                    </form>
                </div>
                
                <!-- ENHANCED FOOTER: Improved link visibility and styling -->
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <p class="mb-2">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                <i class="fas fa-question-circle me-1"></i>Forgot your password?
                            </a>
                        </p>
                        <p class="mb-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                <i class="fas fa-user-plus me-1"></i>Create a new account
                            </a>
                        </p>
                        <p class="mb-0">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">
                                <i class="fas fa-envelope-open me-1"></i>Resend email confirmation
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}