@* AUTHORIZATION CHANGE: Added Identity services to check user authentication status *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<Assignment1.Models.Obituary>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

@* AUTHORIZATION CHANGE: Hide "Create New" from anonymous users *@
@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfDeath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Biography)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryPhotoBase64)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAtUtc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(model => item.DateOfDeath)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Biography)
                </td>
                <td>
                    @Html.DisplayFor(model => item.PrimaryPhotoBase64)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CreatedByUserId)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CreatedAtUtc)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @* AUTHORIZATION CHANGE: Hide Edit/Delete from anonymous users and restrict to admins/creators only *@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @* Show Edit/Delete if user is admin or created this obituary *@
                        @if (User.IsInRole("Admin") || item.CreatedByUserId == UserManager.GetUserId(User))
                        {
                            <text> | </text>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <text> | </text>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>