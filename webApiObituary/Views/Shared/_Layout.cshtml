<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Memorial Registry</title>
    <script type="importmap"></script>
    @* QUICKGRID CHANGE: Added Font Awesome and enhanced styling *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment1.styles.css" asp-append-version="true" />

    @* QUICKGRID CHANGE: Global modern styling *@
    <style>
        :root {
            --primary-color: #0d6efd;
            --secondary-color: #6c757d;
            --success-color: #198754;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #0dcaf0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 0.5px;
        }

        /* NAVIGATION ENHANCEMENT: Improved visibility for login/register links */
        .navbar-nav .nav-link {
            transition: all 0.3s ease;
            border-radius: 6px;
            margin: 0 4px;
            padding: 0.5rem 1rem !important;
        }

        .navbar-nav .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateY(-1px);
        }

        .navbar-nav .nav-link.fw-semibold {
            font-weight: 600;
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .navbar-nav .nav-link.fw-semibold:hover {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.4);
        }

        .bg-primary {
            background: linear-gradient(45deg, var(--primary-color), #6610f2) !important;
        }

        .container {
            max-width: 1200px;
        }

        .footer {
            margin-top: auto;
        }

        main {
            min-height: calc(100vh - 200px);
            padding-top: 2rem;
        }
    </style>
    @* QUICKGRID CHANGE: Add section for additional page-specific styles *@
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        @* QUICKGRID CHANGE: Enhanced navigation with modern styling and branding *@
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dove me-2"></i>Memorial Registry
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Obituary" asp-action="Index">
                                <i class="fas fa-list me-1"></i>Obituaries
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            @* QUICKGRID CHANGE: Enhanced footer with modern styling *@
            <div class="row py-3">
                <div class="col-md-6">
                    <span>&copy; 2025 - Memorial Registry</span>
                </div>
                <div class="col-md-6 text-end">
                    <small>Created by: Heraldo Abreu, Vanessa La, Evan Vink</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>